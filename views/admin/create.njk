{% extends "admin/layout.njk" %}


{% block content %}

<form method="post" action="/admin/create">
  
  
  <section class="details">
    <h3>Adicionar nova receita</h3>

        
    <div class="item">
      <div>Titulo</div>
      <div>
        <input 
          type="text" 
          name="title"
          placeholder="Título da receita"
          value="{{ items.title }}"
          >
      </div>
    </div>


    <div class="item">
      <div>Autor</div>
      <div>
        <input 
          type="text" 
          name="author"
          placeholder="Autor da receita"
          value="{{ items.author }}"
          >
      </div>
    </div>
    
    
    
    <div class="item">
      <div>Imagem da Receita</div>
      <div>
        <input 
          type="url"
          name="image"
          placeholder="http://"
          value="{{ items.image }}"
          >
      </div>
    </div>
    

    <div class="item">
      <div>Ingredientes</div>
      <div id="ingredients">
        <input 
          type="text" 
          name="ingredients[]"
          placeholder="Ingredientes da receita"
          value="{{ ingredient }}"
          >
          
      </div>
        <input type="button" onClick="addIngredientField()" value="+ ingrediente"/>
    </div>

    <div class="item">
      <div>Modo de Preparo</div>
      <div id="prepare">
        <input 
          type="text" 
          name="preparation[]"
          placeholder="Modo de preparo"
          value="{{ preparation }}"
          >
      </div>
        <input type="button" onClick="addPrepareField()" value="+ modo de preparo"/>

    </div>

    <div class="item">
      <div>Informações adicionais</div>
      <div>
        <input 
          type="text" 
          name="information"
          placeholder="Informações adicionais"
          value="{{ items.information }}"
          >
          
      </div>
    </div>


    <button type="submit">Salvar</button>
  
  </section>

</form>


{% endblock content %}
