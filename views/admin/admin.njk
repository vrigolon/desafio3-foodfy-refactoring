{% extends "admin/layout.njk" %}

{% block head %}
      <title>Foodfy - Admin</title>
{% endblock %}


{% block content %}
  <section class="admin-show-title">
      <h2>Receita: {{items.title}} <span><a class="admin-button" href="/admin/create">Adicionar</a></span> </h2>
  </section>

  <main class="admin-container">
    <div class="cards-main">
      <div class="cards-admin">
      {% for item in items %}
        <div class="card-admin" id="{{items.indexOf(item)}}">
          <img src="{{item.image}}" alt="{{item.title}}">
          <div class="admin-recipe-details">
            <p class="recipe-name-admin">{{item.title}}</p>
            <p class="recipe-author-admin">por {{item.author}}</p>
            <a href="/admin/recipes/{{items.indexOf(item)}}">Visualizar</a>     
          </div>
        </div>
      {% endfor %}

        
      </div>
    </div>
  </main>

<script src="/scripts.js"></script>

{% endblock %}