{% extends "layout.njk" %}

{% block head %}
      <title>Foodfy - Receitas</title>
{% endblock %}


{% block content %}
  <main>
    <div class="cards-main">
      <div>
      </div>
      <div class="cards">
      {% for item in items %}
        <div class="card" id="{{items.indexOf(item)}}">
          <img src="/images/{{item.image}}" alt="{{item.title}}">
          <p class="recipe-name">{{item.title}}</p>
          <p class="recipe-author">por {{item.author}}</p>      
        </div>
      {% endfor %}

        
      </div>
    </div>
  </main>

<script src="/scripts.js"></script>

{% endblock %}