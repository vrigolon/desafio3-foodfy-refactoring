{% extends "layout.njk" %}

{% block head %}
      <title>Foodfy - Chefs</title>
{% endblock %}


{% block content %}
  <main>
    <h2>Chefs</h2>
    <div class="cards-chefs-main">
      <div class="cards-chefs">
        {% for item in items %}
        <div class="card-chefs">
          <img src="{{item.avatar_url}}" alt="{{item.title}}">
          <p class="recipe-name">{{item.name}}</p>
          <p class="recipe-author">3 receitas</p>      
      </div>
      {% endfor %}

        
      </div>
    </div>
  </main>

<script src="/scripts.js"></script>

{% endblock %}