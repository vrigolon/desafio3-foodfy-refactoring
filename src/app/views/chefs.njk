{% extends "layout.njk" %}

{% block head %}
      <title>Foodfy - Chefs</title>
{% endblock %}


{% block content %}
  <main>
    <div class="cards-chefs">
      {% for item in items %}
      <div class="card-chefs">
        <img src="{{item.avatar_url}}" alt="{{item.title}}">
        <div>
          <p>{{item.name}}</p>
          <p class="card-chefs-recipe-count">3 receitas</p>      
        </div>
      </div>
      {% endfor %}      
    </div>
  </main>

<script src="/scripts.js"></script>

{% endblock %}