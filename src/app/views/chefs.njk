{% extends "layout.njk" %}

{% block head %}
      <title>Foodfy - Chefs</title>
{% endblock %}


{% block content %}
  <main>
    <div class="cards-chefs">
      {% for item in items %}
      <div class="card-chefs">
        {# <a href="/chef/{{item.id}}"> #}
          <img src="{{item.avatar_url}}" alt="{{item.title}}">
          <div>
            <p>{{item.name}}</p>
            <p class="card-chefs-recipe-count">{{item.total_recipes}} {% if item.total_recipes >= 2 %}receitas{% else %}receita{% endif %}</p> 
          </div>
        {# </a> #}
      </div>
      {% endfor %}      
    </div>
  </main>

<script src="/scripts.js"></script>

{% endblock %}