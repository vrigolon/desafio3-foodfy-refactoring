{% extends "admin/recipes/layout.njk" %}


{% block content %}


  
  <section class="admin-edit-title">
      <h2>Editando receita</h2>
        <span>
          <form action="/admin/recipe/{{recipeIndex}}?_method=DELETE" method="POST">
            <button type="submit">Deletar</button>
            <input type="hidden" name="id" value="{{items.id}}">

          </form>
        </span>
        <span>
          <button form="update" type="submit">Salvar receita</button>
        </span>
        
  </section>
<form id="update" method="post" action="/admin/edit/{{recipeIndex}}?_method=PUT">
  <section class="details">

    {% include 'admin/recipes/fields.njk' %}
  
    <input type="hidden" name="id" value="{{items.id}}">
  </section>
</form>


{% endblock content %}