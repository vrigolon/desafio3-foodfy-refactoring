{% extends "layout.njk" %}

{% block head %}
      <title>Foodfy - Receitas</title>
{% endblock %}


{% block content %}
  <main>
    <h2>Buscando por "{{filter}}"</h2>
    <div class="cards-main">
      <div>
      </div>
      <div class="cards">
      {% for item in items %}
        <div class="card">
          <a href="/recipes/{{item.id}}">
            <img src="{{item.image}}" alt="{{item.title}}">
            <p class="recipe-name">{{item.title}}</p>
            <p class="recipe-author">por {{item.chef_name}}</p> 
          </a>     
        </div>
      {% endfor %}

        
      </div>
    </div>
  </main>

<script src="/scripts.js"></script>

{% endblock %}